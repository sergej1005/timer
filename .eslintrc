{
    "extends": ["airbnb", "airbnb/hooks", "plugin:react-hooks/recommended"],

    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },

    "globals": {
        "document": false
    },

    "parserOptions": {
        "ecmaVersion": 2018
    },

    "rules": {
        "no-console": 0,
        "no-nested-ternary": "off",
        "import/prefer-default-export": 0
    }    
}